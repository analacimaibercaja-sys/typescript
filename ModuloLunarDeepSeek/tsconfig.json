{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./js",
    "rootDir": "./js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["js/**/*"],
  "exclude": ["node_modules"]
}